@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<style>
    .logoMynt {
        height: 100px;
        width: auto
    }
</style>

<form method="post">
    <div class="card-group">
        <div class="card p-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 text-center">
                        <img src="/img/mynt.png" class="logoMynt" />
                    </div>
                </div>
                @*<p class="text-muted">Sign In to your account</p>*@
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="icon-user"></i>
                        </span>
                    </div>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="input-group mb-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="icon-lock"></i>
                        </span>
                    </div>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary px-4">Login</button>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <a class="btn btn-link px-0" asp-page="./ForgotPassword">Forgot your password?</a>
                    </div>
                    <div class="col-6">
                        <a class="btn btn-link px-0" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
            <div class="card-body text-center">
                <div style="padding-top: 44px;">
                    <h2>Sign up</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                    <a class="btn btn-primary active mt-3" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register Now!</a>
                </div>
