{
    "Logging":
    {
        "IncludeScopes": false,
        "Debug":
        {
            "LogLevel":
            {
                "Default": "Information",
                "Microsoft": "None"
            }
        },
        "Console":
        {
            "LogLevel":
            {
                "Default": "Information",
                "Microsoft": "None"
            }
        }
    },

    // TODO Too verbose? All we may need is log path, but we're open for other sinks if required
    "Serilog":
    {
        "Using":
        [
            "Serilog.Sinks.RollingFile"
        ],
        "MinimumLevel":
        {
            "Default": "Debug",
            "Override":
            {
                "Microsoft": "Information",
                "System": "Warning"
            }
        },
        "WriteTo":
        [
            {
                "Name": "Async",
                "Args":
                {
                    "configure":
                    [
                        {
                            "Name": "RollingFile",
                            "Args":
                            {
                                "pathFormat": "Logs\\Mynt-{Date}.log"
                            }
                        }
                    ]
                }
            }
        ],
        "Enrich":
        [
            "FromLogContext"
        ]
    },

    "AzureTableStorageOptions":
    {
        "AzureTableStorageConnectionString": null
    }

}
